from flask import Flask, render_template, request, redirect
import pandas as pd

app = Flask(__name__)

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/upload', methods=['POST'])
def upload():
    file = request.files['archivo']
    df = pd.read_excel(file)
    # Guardar y procesar archivo
    return redirect('/')

